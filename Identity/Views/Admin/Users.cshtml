@model List<AppUser> 
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Колдонуучулардд</h2>
<table class="table table-bordered table-striped mt-2">
    <tr>
        <td>Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Ролдор</td>
        <td>Ролу атоо</td>
        <td>Сыр соз жанылоо</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Nothing not found</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a asp-action="RoleAssign" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info">Рол атоо</a></td>
                <td><a asp-action="ResetUserPasswordByAdmin" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-success">Сыр соз жанылоо</a></td>
            </tr>
        }
    }
</table>



