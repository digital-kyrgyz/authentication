@model Identity.ViewModels.ResetPasswordVm

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4  offset-md-4">
        @if (ViewBag.Status == "success")
        {

            <div class="alert alert-info">Сыр соз жаныланды</div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Кируу</a>

        }
        else
        {


            <h2>Сыр созумду унуттум</h2>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="New Password" class="btn btn-primary" />
                </div>
            </form>

        }
    </div>
</div>