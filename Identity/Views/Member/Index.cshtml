@model UserVm
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<h3 class="text-center">Колдонуучу информациялары</h3>
<div class="row">
    <div class="col-md-3">
        <img src="@Model.Picture" alt="photo" width="150" height="150" />
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Атыныз</td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td>Э-почта</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Телефон номер</td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td>Туулган кун</td>
                <td>
                    @if (!String.IsNullOrEmpty(Model.BirthDay?.ToShortDateString()))
                    {
                        @Model.BirthDay
                    }
                    else
                    {
                        <span>Белгисиз</span>
                    }
                </td>
            </tr>
            <tr>
                <td>Шаар</td>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                        <span>Белгисиз</span>
                    }
                </td>
            </tr>
            <tr>
                <td>Жыныс</td>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>