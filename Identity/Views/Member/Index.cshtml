@model UserVm
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<h3 class="text-center">Колдонуучу информациялары</h3>
<div class="row">
    <div class="col-md-3">
        <img src="https://www.gravatar.com/avatar/205e460b479e2e5b48aec07710c08d50" alt="photo" />
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Атыныз</td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td>Э-почта</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Телефон номер</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </table>
    </div>
</div>