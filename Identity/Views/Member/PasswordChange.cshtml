@model Identity.ViewModels.PasswordChangeVm

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

@if(ViewBag.Success == "true")
{
<div class="alert alert-info">
    Сыр созунуз жаныланды
</div>
}
else{
<h1>Сыр созду жанылоо</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="PasswordChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordOld" class="control-label"></label>
                <input asp-for="PasswordOld" class="form-control" />
                <span asp-validation-for="PasswordOld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordCompare" class="control-label"></label>
                <input asp-for="PasswordCompare" class="form-control" />
                <span asp-validation-for="PasswordCompare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сыр соз алмаштыр" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}