<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/lib/jquery/jquery.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>
    <header>
        <!--- Navbar --->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand text-white" asp-action="Index" asp-controller="Home"><i class="fa fa-graduation-cap fa-lg mr-2"></i>BLOG</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse" aria-controls="nvbCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="nvbCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="Index" asp-controller="Admin"><i class="fa fa-th-list fa-fw mr-1"></i>Admin Page</a>
                        </li>
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="Manager" asp-controller="Member"><i class="fa fa-th-list fa-fw mr-1"></i>Manager</a>
                        </li>
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="Editor" asp-controller="Member"><i class="fa fa-th-list fa-fw mr-1"></i>Editor</a>
                        </li>
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="Bishkek" asp-controller="Member"><i class="fa fa-th-list fa-fw mr-1"></i>Bishkek Claims</a>
                        </li>
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="Violance" asp-controller="Member"><i class="fa fa-th-list fa-fw mr-1"></i>Violance Claims</a>
                        </li>
                        <li class="nav-item active pl-1">
                            <a class="nav-link" asp-action="ExchangeRedirect" asp-controller="Member"><i class="fa fa-th-list fa-fw mr-1"></i>Алмашуу инфо</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>

    <div class="container" style="min-height:560px;margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menu</h3>
                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Сыр соз алмаштыруу</a>
                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Инфо озгортуу</a>
                <a class="btn btn-info btn-block" asp-action="SignOut" asp-controller="Home" asp-route-returnUrl="/Home/Index">Чыгуу</a>
            </div>
        </div>
    </div>

    <!--- Footer --->
    <footer>
        <div class="jumbotron jumbotron-fluid bg-secondary p-4 mt-5 mb-0">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 cizgi">
                        <div class="card bg-secondary border-0">
                            <div class="card-body text-light text-center">
                                <h5 class="card-title text-white display-4" style="font-size:30px">Укуктар</h5>
                                <p class="d-inline lead">
                                    Бардык укуктар корголгон © @DateTime.Now.Date.ToString("yyyy")<br>
                                    <a href="#" class="text-light d-block lead">Blog</a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 cizgi">
                        <div class="card bg-secondary border-0">
                            <div class="card-body text-center">
                                <h5 class="card-title text-white display-4" style="font-size:30px">Байланышуу</h5>
                                <a class="text-light d-block lead" style="margin-left: -20px" href="#"><i class="fa fa-phone mr-2"></i>+90 (000) 000 0 000</a>
                                <a class="text-light d-block lead" href="#"><i class="fa fa-envelope mr-2"></i>admin@localhost.com</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="card bg-secondary border-0">
                            <div class="card-body text-center">
                                <h5 class="card-title text-white display-4" style="font-size:30px">Социальдык Медия</h5>

                                <a class="text-light" href="#"><i class="fa fa-facebook-square fa-fw fa-2x"></i></a>

                                <a class="text-light" href="#"><i class="fa fa-twitter-square fa-fw fa-2x"></i></a>

                                <a class="text-light" href="#"><i class="fa fa-instagram fa-fw fa-2x"></i></a>

                                <a class="text-light" href="#"><i class="fa fa-linkedin fa-fw fa-2x"></i></a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer -->
</body>
</html>